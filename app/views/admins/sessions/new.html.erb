<div class="w-full flex flex-col items-center">
  <h2 class="font-semibold text-2xl md:text-3xl mb-6 text-red-800">
    <%= t('devise.sessions.new.sign_in') %>
  </h2>
  
  <div class="rounded-lg w-full max-w-xl p-8">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-6 flex items-center">
        <%= f.label :email, class: "w-2/3 text-gray-700 text-lg md:text-xl pl-8" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-2/3 border border-gray-300 bg-gray-100 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-300" %>
      </div>
    
      <div class="mb-6 flex items-center">
        <%= f.label :password, class: "w-2/3 text-gray-700 text-lg md:text-xl pl-8" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-2/3 border border-gray-300 bg-gray-100 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-300" %>
      </div>

    <!--
      <% if devise_mapping.rememberable? %>
        <div class="mb-6 flex items-center">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    -->

      <div class="mt-6 justify-center flex">
        <%= f.submit t('devise.sessions.new.sign_in'), class: "w-1/3 bg-red-600 text-white mt-4 py-2 rounded-md font-semibold hover:bg-red-700 text-md md:text-lg" %>
      </div>
    <% end %>

    <div class="mt-6 justify-center flex">
      <%= render 'admins/shared/links' %>
    </div>
  </div>
</div>
