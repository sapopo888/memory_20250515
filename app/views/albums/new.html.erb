<div class="w-full flex flex-col items-center">
  <div class="font-semibold text-2xl md:text-3xl mb-6 text-gray-800">
    <%= t('albums.new.title') %>
  </div>

  <div class="rounded-lg w-full max-w-xl">
    <%= form_with model: @album, class: "space-y-6" do |f| %>

      <div class=''>
        <label class='text-gray-700 text-lg md:text-xl pl-8' >表示デザインを選んでください。</label>

        <div class="flex w-full space-x-2 pl-8 mt-2">
          <% { 'pink' => 'covers/pink.jpg', 'blue' => 'covers/blue.jpg', 'green' => 'covers/green.jpg', 'black' => 'covers/black.jpg', 'white' => 'covers/white.jpg' }.each do |name, path| %>
            <div>
              <label>
                <%= radio_button_tag 'album[cover_template]', name, @album.cover_template == name, id: "cover_#{name}", class: "hidden peer"  %>
                <%= image_tag path, alt: name, class: "cover_template w-full rounded border-2 peer-checked:border-blue-600 transition duration-200" %>
              </label>
            </div>
          <% end %>
        </div>
      </div>

      <div class="mb-6 flex items-center">
        <%= f.label :title, class: "w-1/3 text-gray-700 text-lg md:text-xl pl-8" %>
        <%= f.text_field :title, class: "w-2/3 border border-gray-300 bg-gray-100 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-300" %>
      </div>

      <div class="mb-6 flex items-center">
        <%= f.label :description, class: "w-1/3 text-gray-700 text-lg md:text-xl pl-8" %>
        <%= f.text_area :description, rows: 4, class: "w-2/3 border border-gray-300 bg-gray-100 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-300" %>
      </div>

      <div class="mt-6 flex justify-center">
        <%= f.submit t('defaults.create'), class: "w-1/3 bg-button text-white mt-4 py-2 rounded-md font-semibold hover:bg-change text-md md:text-lg" %>
      </div>

    <% end %>
    <%= link_to t('defaults.back'), albums_path, class: "flex justify-center text-gray-800 mt-6 px-8" %>

  </div>
</div>