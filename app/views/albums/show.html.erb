<div class="w-full flex flex-col items-center">
  <div class="mb-2 space-x-4  text-gray-800 text-lg">
    <%= link_to t('albums.show.add_images'), new_album_photo_path(@album) %>
    <%= link_to t('albums.show.edit_images'), album_edit_photos_path(@album) %>
    <%= link_to t('albums.show.delete'), album_path(@album), data: { turbo_method: :delete, turbo_confirm: t('defaults.delete_confirm')} %>
  </div>
  <p class="mb-2 text-sm text-gray-800">â€»<%= t('.click_to_turn_over_a_page') %></p>

  <% cover_path = case @album.cover_template
      when 'pink' then 'covers/pink.jpg'
      when 'blue' then 'covers/blue.jpg'
      when 'green' then 'covers/green.jpg'
      when 'black' then 'covers/black.jpg'
  end %>

  <div id="book">
    <div class="my-page" data-density="hard">
      <%= image_tag cover_path, alt: "Cover", class: "cover w-full" %>

      <div class='absolute inset-0 flex flex-col items-center justify-center mb-40'>
      <% if cover_path == 'covers/black.jpg' %>
        <div class="rounded bg-gray-700">
          <h1 class='text-white font-semibold text-2xl border-white border-b m-0.5'><%= @album.title %></h1>
        </div>
        <div class="rounded bg-gray-700">
          <p class='text-white font-semibold m-0.5'><%= @album.description%></p>
        </div>
      <% else %>
        <h1 class='text-gray-700 font-semibold text-2xl border-b border-gray-400'><%= @album.title %></h1>
        <p class='text-gray-700 font-semibold mt-4'><%= @album.description%></p>
      <% end %>
      </div>
    </div>
    <% if @photos.present? %>
      <% @photos.each do |photo| %>
        <% if photo.images.present? %>
          <% photo.images.each do |image| %>
            <div class="my-page contents flex flex-col items-center px-8 py-8" data-density="hard">
              <div class="w-full flex justify-center">
                <%= image_tag image.url, class: "max-h-[400px] object-contain" %>
              </div>
              <p class="flex items-center justify-center text-center mt-8 rounded-md bg-white max-w-full min-h-[100px] px-4 break-words">
                <%= photo.comment %>
              </p>
            </div>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
    <div class="my-page" data-density="hard">
      <%= image_tag cover_path, alt: "Back Cover", class: "cover w-full" %>
      <div class='absolute inset-0 flex items-center justify-center'>
        <p class='text-gray-700 font-semibold text-2xl mb-32'>END</p>
      </div>
    </div>
  </div>
</div>