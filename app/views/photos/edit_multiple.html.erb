<% if flash[:alert] %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded mb-4">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_with url: album_update_photos_path(@album), method: :patch, local: true do %>
  <% @photos.each_with_index do |photo, index| %>
    <div>
      <% photo.images.each do |image| %>
        <%= image_tag image.url, class: "w-32 h-32 object-cover border rounded " %>
      <% end %>

      <%= hidden_field_tag "photos[#{index}][id]", photo.id %>
      <%= text_area_tag "photos[#{index}][comment]", photo.comment, class: "w-full p-2 border rounded" %>
    </div>
  <% end %>

  <%= submit_tag "保存", class: "bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded" %>
<% end %>